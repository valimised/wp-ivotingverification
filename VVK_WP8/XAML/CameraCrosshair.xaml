<UserControl x:Class="VVK_WP8.CameraCrosshair"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="180" d:DesignWidth="180" IsHitTestVisible="False">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" IsHitTestVisible="False">
        <Rectangle HorizontalAlignment="Left" Width="320" Height="320" Margin="0,0,0,0" Stroke="LightGray" VerticalAlignment="Top"  StrokeThickness="2"/>
    </Grid>
</UserControl>